pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/ateeqhonyal321/-Demo'
            }
        }

        stage('Build') {
            steps {
                echo 'üß± Compiling Java source...'
                sh 'javac Hello.java'
            }
        }

        stage('Run') {
            steps {
                echo '‚ñ∂Ô∏è Running Java program...'
                sh 'java Hello'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Build succeeded!'
        }
        failure {
            echo '‚ùå Build failed.'
        }
    }
}
